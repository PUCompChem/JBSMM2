<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>pu</groupId>
  <artifactId>pu-jbsmm2</artifactId>
  <packaging>jar</packaging>
  <version>0.0.1-SNAPSHOT</version>
  <name>pu-jbsmm2</name>
  <description>
	JBSMM2 (Java Based System for Molecular Modeling) - ver. 2. 
	Chemoinformatics applications and other software functionalities developed by computer chemistry group at the University of Plovdiv
  </description>
  
  <repositories>
	<repository>
		<id>nexus-idea</id>
		<url>https://nexus.ideaconsult.net/content/repositories/thirdparty</url>
		<snapshots>
			<enabled>false</enabled>
			<updatePolicy>always</updatePolicy>
		</snapshots>
	</repository>
	<repository>
		<id>nexus-idea-releases</id>
		<url>https://nexus.ideaconsult.net/content/repositories/releases</url>
		<snapshots>
			<enabled>false</enabled>
		</snapshots>
		<releases>
			<enabled>true</enabled>
		</releases>
	</repository>
	<repository>
		<id>nexus-idea-snapshots</id>
		<url>https://nexus.ideaconsult.net/content/repositories/snapshots</url>
		<snapshots>
			<enabled>true</enabled>
			<updatePolicy>always</updatePolicy>
		</snapshots>
	</repository>
      
